<div class="auth-card mx-3">
  <div class="text-center mb-3">
    <div class="logo-container mb-2"><i class="fas fa-building text-white"></i></div>
    <h1 class="auth-title">Recuperar acceso</h1>
    <p class="auth-sub">Te enviaremos un enlace de recuperación</p>
  </div>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, data: { turbo: true }) do |f| %>
    <div class="mb-3">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-custom", required: true %>
    </div>
    <div class="d-grid mb-2">
      <%= f.submit "Enviar instrucciones", class: "btn-gradient" %>
    </div>
  <% end %>

  <div class="text-center small mt-2">
    <%= link_to "Volver a iniciar sesión", new_session_path(resource_name), data: { turbo_frame: "auth_frame" } %>
  </div>
</div>
