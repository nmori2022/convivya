<div class="auth-card mx-3">
  <div class="text-center mb-3">
    <div class="logo-container mb-2"><i class="fas fa-building text-white"></i></div>
    <h1 class="auth-title">Crear cuenta</h1>
    <p class="auth-sub">Comienza a administrar tus edificios</p>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: true }) do |f| %>
    <div class="mb-3">
      <%= f.label :name, "Nombre", class: "form-label" %>
      <%= f.text_field :name, class: "form-control form-control-custom", required: true %>
    </div>
    <div class="mb-3">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, autocomplete: "email", class: "form-control form-control-custom", required: true %>
    </div>
    <div class="mb-3">
      <%= f.label :password, "Contraseña", class: "form-label" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-custom", required: true %>
    </div>
    <div class="mb-3">
      <%= f.label :password_confirmation, "Confirmación", class: "form-label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-custom", required: true %>
    </div>
    <div class="d-grid mb-2">
      <%= f.submit "Crear cuenta", class: "btn-gradient" %>
    </div>
  <% end %>

  <div class="text-center small mt-2">
    <%= link_to "¿Ya tienes cuenta? Inicia sesión", new_session_path(resource_name), data: { turbo_frame: "auth_frame" } %>
  </div>
</div>
